<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:tx="http://www.springframework.org/schema/tx"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
            http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-2.5.xsd
            http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-2.5.xsd
            http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-2.5.xsd"
       default-lazy-init="true">
        
    <!-- Quartz configuration -->
   	<bean id="updatingBalanceJobProcessor" class="com.aeiou.bigbang.services.quartz.UpdatingBalanceJobProcessor">
	</bean>
	
	<bean id="updateBalanceJobDetail" class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
		<property name="targetObject">
			<ref bean="updatingBalanceJobProcessor" />
		</property>
		<property name="targetMethod">
			<value>updateBalance</value>
		</property>
	</bean>
	
	<bean id="refreshSessionTrigger" class="org.springframework.scheduling.quartz.SimpleTriggerFactoryBean">
		<property name="jobDetail" ref="updateBalanceJobDetail" />
		<property name="startDelay"><value>0</value></property>
		<property name="repeatInterval"><value>6000</value></property>
	</bean>
	 
	<bean id="updateBalanceTrigger" class="org.springframework.scheduling.quartz.CronTriggerBean">
		<property name="jobDetail" ref="updateBalanceJobDetail" />
		<property name="startDelay"><value>0</value></property>
		<property name="cronExpression">
           <value>0 43 2 1 * ?</value>
        </property>
	</bean>
	 
	<!-- Quartz Scheduler -->
	<bean id="schedulerFactoryBean" class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
		<property name="triggers">
			<list>
				<ref local="updateBalanceTrigger"/>
			</list>
		</property>
	</bean>
   
</beans>    